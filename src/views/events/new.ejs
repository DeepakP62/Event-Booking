<% layout("/layouts/boilerplate.ejs")%>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <h1>Create New Event</h1>
                <form method="post" action="/event" novalidate class="needs-validation">
                    <div class="mb-3">
                        <label for="name" class="form-label">Event Name:</label>
                        <input type="text" name="name" placeholder="Enter Event name" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description:</label>
                        <textarea name="description" placeholder="Enter Event Description" class="form-control" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="totalSeats" class="form-label">Event Tota Seats:</label>
                        <input type="number" name="totalSeats" placeholder="Ente total seats" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="availabeSeats" class="form-label">Event Availabe Seats</label>
                        <input type="number" name="seatsAvailable" placeholder="Enter availabe seats" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="date" class="form-label">Data:</label>
                        <input type="date" name="date" class="form-control">
                    </div>
                    <button class="btn btn-dark">Create</button>
                </form>
            </div>
        </div>
    </body>