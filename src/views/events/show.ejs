<% layout("/layouts/boilerplate.ejs")%>
<body>
    <% if (success_msg && success_msg.length) { %>
        <div class="row mt-2">
            <div class="alert alert-success alert-dismissible fade show col-6 offset-3" role="alert" style="padding: 0,auto;">
                <%= success_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
    <% } %>
    <% if (error_msg && error_msg.length) { %>
        <div class="row mt-2">
            <div class="alert alert-danger alert-dismissible fade show col-6 offset-3" role="alert" style="padding: 0,auto;">
                <%= error_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2> <%= event.name %></h2>
        </div>
        <div class="card listing-card col-6 offset-2">
            <img src="<%=event.imageUrl%>" class="card-img-top show-img" alt="listing-image">
            <div class="card-body">
                <%= event.description %>  <br/>
                <span> &nbsp; <b>Total Seats: <%= event.totalSeats %> </b></span><br>
                <span> &nbsp; <b>Seats Availabe <%= event.seatsAvailable %></b></span>
            </div>
        </div>
        <div class="col-6 offset-2 form-btn">
            <form method="get" action="/event/<%=event._id%>/edit">
                <button class="btn btn-dark edit-btn">Edit</button>
            </form>
            <form method="post" action="/event/<%=event._id%>?_method=DELETE">
                <button class="btn btn-dark delete-btn">Delete</button>
            </form>
            <form method="post" action="/event/<%=event._id%>/ticketBooking">
                <button class="btn btn-dark delete-btn">Book-Ticket</button>
            </form>
        </div>
    </div>
</body>
